<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Generate XML</h1>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <form action="/xml" method="post">
            <div class="card-body">
              <div class="form-group">
                <label for="unitId">ID</label>
                <input class="form-control" type="text" name="unitId" id="unitId">
              </div>
              <div class="form-group">
                <label for="centered">Centered</label>
                <select class="form-control" name="centered" id="centered">
                  <option value="FALSE">False</option>
                  <option value="TRUE">True</option>
                </select>
              </div>
            </div>
            <div class="card-footer">
              <button class="btn btn-primary" type="submit">Next</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>