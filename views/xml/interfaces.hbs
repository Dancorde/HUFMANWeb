<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Generate XML</h1>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Interfaces</h3>
          </div>
          <form action="/xml/interfaces" method="post">
            <div class="card-body">
              <div class="form-group">
                <label for="ip">IP</label>
                <input class="form-control" type="text" name="ip" id="ip">
              </div>
              <div class="form-group">
                <label for="port">Port</label>
                <input class="form-control" type="text" name="port" id="port">
              </div>
              <div class="form-group">
                <label for="maxConn">Max Connections</label>
                <input class="form-control" type="text" name="maxConn" id="maxConn">
              </div>
            </div>
            <div class="card-footer">
              <button class="btn btn-primary" type="submit">Add</button>
              <a href="/xml/newXML" class="btn btn-primary">Back</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>