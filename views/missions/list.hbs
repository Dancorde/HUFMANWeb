<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Missions</h1>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card card-primary">
          <div class="card-body">
            <table id="list" class="table table-condensed table-hover">
              <thead>
                <tr>
                  <th>Mission ID</th>
                  <th>Client</th>
                  <th>Architeture</th>
                  <th>Central VANT</th>
                  <th>Formation</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {{#each missions}}
                <tr>
                  <td>{{this.id}}</td>
                  <td>{{this.client}}</td>
                  <td>{{this.architecture}}</td>
                  <td>{{this.centralVant}}</td>
                  <td>{{this.formation}}</td>
                  <td>
                    <div class="btn-group">
                      <a class="btn btn-sm btn-primary" href="/missions/{{this.id}}"><i class="fas fa-eye" aria-hidden="true"></i></a>
                      <a class="btn btn-sm btn-warning" href="/missions/{{this.id}}/edit"><i class="fas fa-edit" aria-hidden="true"></i></a>
                      <a class="btn btn-sm btn-danger" href="/missions/{{this.id}}/delete" onclick="return confirm('Are you sure?')"><i
                          class="fas fa-trash" aria-hidden="true"></i></a>
                    </div>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>