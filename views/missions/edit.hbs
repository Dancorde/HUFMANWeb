<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Missions</h1>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Edit Mission</h3>
          </div>
          <form action="/missions/{{mission.id}}" method="post">
            <div class="card-body">
              <div class="form-group">
                <label for="client">client</label>
                <input class="form-control" type="text" name="client" id="client" value="{{mission.client}}">
              </div>
              <div class="form-group">
                <label for="architecture">architecture</label>
                <input class="form-control" type="text" name="architecture" id="architecture" value="{{mission.architecture}}">
              </div>
              <div class="form-group">
                <label for="centralVant">centralVant</label>
                <input class="form-control" type="text" name="centralVant" id="centralVant" value="{{mission.centralVant}}">
              </div>
              <div class="form-group">
                <label for="formation">formation</label>
                <input class="form-control" type="text" name="formation" id="formation" value="{{mission.formation}}">
              </div>
            </div>
            <div class="card-footer">
              <button class="btn btn-primary" type="submit">Save</button>
              <button class="btn btn-danger" onclick="window.history.back();">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

