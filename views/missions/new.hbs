<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Missions</h1>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">New Mission</h3>
          </div>
          <form action="/missions/new" method="post">
            <div class="card-body">
              <div class="form-group">
                <label for="client">Client</label>
                <input class="form-control" type="text" name="client" id="client">
              </div>
              <div class="form-group">
                <label for="architecture">Architecture</label>
                <input class="form-control" type="text" name="architecture" id="architecture">
              </div>
              <div class="form-group">
                <label for="centralVant">Central VANT</label>
                <input class="form-control" type="text" name="centralVant" id="centralVant">
              </div>
              <div class="form-group">
                <label for="formation">Formation</label>
                <input class="form-control" type="text" name="formation" id="formation">
              </div>
            </div>
            <div class="card-footer">
              <button class="btn btn-primary" type="submit">Create</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

