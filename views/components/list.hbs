<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Components</h1>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card card-primary">
          <div class="card-body">
            <table id="list" class="table table-condensed table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Brand</th>
                  <th>Serial Number</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {{#each components}}
                <tr>
                  <td>{{this.name}}</td>
                  <td>{{this.brand}}</td>
                  <td>{{this.serialNumber}}</td>
                  <td>
                    <div class="btn-group">
                      <a class="btn btn-sm btn-primary" href="/components/{{this.id}}"><i class="fas fa-eye"
                          aria-hidden="true"></i></a>
                      <a class="btn btn-sm btn-warning" href="/components/{{this.id}}/edit"><i class="fas fa-edit"
                          aria-hidden="true"></i></a>
                      <a class="btn btn-sm btn-danger" href="/components/{{this.id}}/delete"
                        onclick="return confirm('Are you sure?')"><i class="fas fa-trash" aria-hidden="true"></i></a>
                    </div>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>