<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Users</h1>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <table id="list" class="table table-condensed table-hover">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Role</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {{#each users}}
                <tr>
                  <td>{{this.username}}</td>
                  <td>{{this.role}}</td>
                  <td>
                    <div class="btn-group">
                      <a class="btn btn-sm btn-primary" href="/users/{{this.id}}"><i class="fas fa-eye"
                          aria-hidden="true"></i></a>
                      <a class="btn btn-sm btn-warning" href="/users/{{this.id}}/edit"><i class="fas fa-edit"
                          aria-hidden="true"></i></a>
                      <a class="btn btn-sm btn-danger" href="/users/{{this.id}}/delete" onclick="return confirm('Are you sure?')"><i
                          class="fas fa-trash" aria-hidden="true"></i></a>
                    </div>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

